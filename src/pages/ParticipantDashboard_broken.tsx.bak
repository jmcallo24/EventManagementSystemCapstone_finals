                <Badge className={getStatusColor(selectedEvent.status)}>
                  {selectedEvent.status}
                </Badge>
                {selectedEvent.isMyEvent && (
                  <Badge variant="secondary" className="bg-green-100 text-green-800">
                    Your Event
                  </Badge>
                )}
                {selectedEvent.isRegistered && (
                  <Badge variant="secondary" className="bg-purple-100 text-purple-800">
                    Registered
                  </Badge>
                )}
              </div>
              
              <div className="flex justify-end space-x-2 pt-4 border-t">
                <Button variant="outline" onClick={() => setShowEventDetails(false)}>
                  Close
                </Button>
                {!selectedEvent.isRegistered ? (
                  <Button
                    onClick={() => {
                      handleEventRegister(selectedEvent.id);
                      setShowEventDetails(false);
                    }}
                    disabled={loading || selectedEvent.status === "completed" || selectedEvent.current_participants >= selectedEvent.max_participants}
                  >
                    {loading ? "Registering..." : "Register"}
                  </Button>
                ) : (
                  <Button
                    variant="secondary"
                    onClick={() => {
                      handleEventRegister(selectedEvent.id);
                      setShowEventDetails(false);
                    }}
                    disabled={loading}
                  >
                    {loading ? "Loading..." : "Unregister"}
                  </Button>
                )}
              </div>
            </CardContent>
          </Card>
        </div>
      )}
    </div>
  );
};

